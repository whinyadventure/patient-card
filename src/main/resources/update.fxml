<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxWidth="400.0" minWidth="400.0" prefWidth="400.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UpdateController">
   <children>
      <Label alignment="CENTER" maxWidth="-Infinity" prefWidth="200.0" text="Insert new data" underline="true">
         <font>
            <Font size="20.0" />
         </font>
         <VBox.margin>
            <Insets left="90.0" top="10.0" />
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="600.0" spacing="10.0">
         <children>
            <Label maxWidth="-Infinity" prefWidth="90.0" text="First Name:" textAlignment="RIGHT">
               <font>
                  <Font size="15.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="firstName" maxWidth="-Infinity" prefWidth="200.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="600.0" spacing="10.0">
         <children>
            <Label alignment="CENTER_RIGHT" maxWidth="-Infinity" prefWidth="90.0" text="Last Name:" textAlignment="RIGHT">
               <font>
                  <Font size="15.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="lastName" maxWidth="-Infinity" prefWidth="200.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="600.0" spacing="10.0">
         <children>
            <Label alignment="CENTER_RIGHT" maxWidth="-Infinity" prefWidth="90.0" text="Phone:" textAlignment="RIGHT">
               <font>
                  <Font size="15.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="phoneNbr" maxWidth="-Infinity" prefWidth="200.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="600.0" spacing="10.0">
         <children>
            <Label alignment="CENTER_RIGHT" maxWidth="-Infinity" prefWidth="90.0" text="Address:" textAlignment="RIGHT">
               <font>
                  <Font size="15.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="address" maxWidth="-Infinity" prefWidth="200.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="600.0" spacing="10.0">
         <children>
            <Label alignment="CENTER_RIGHT" maxWidth="-Infinity" prefWidth="90.0" text="City:" textAlignment="RIGHT">
               <font>
                  <Font size="15.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="city" maxWidth="-Infinity" prefWidth="200.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="600.0" spacing="10.0">
         <children>
            <Label alignment="CENTER_RIGHT" maxWidth="-Infinity" prefWidth="90.0" text="Post Code:" textAlignment="RIGHT">
               <font>
                  <Font size="15.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="postCode" maxWidth="-Infinity" prefWidth="200.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="600.0" spacing="10.0">
         <children>
            <Label alignment="CENTER_RIGHT" maxWidth="-Infinity" prefWidth="90.0" text="Country:" textAlignment="RIGHT">
               <font>
                  <Font size="15.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="country" maxWidth="-Infinity" prefWidth="200.0" />
         </children>
      </HBox>
      <Button fx:id="updateBtn" mnemonicParsing="false" onAction="#confirmUpdate" text="Confirm update">
         <VBox.margin>
            <Insets left="150.0" />
         </VBox.margin>
      </Button>
   </children>
   <padding>
      <Insets bottom="10.0" top="10.0" />
   </padding>
</VBox>
